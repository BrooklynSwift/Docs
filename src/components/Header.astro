---
import Logo from "../components/Logo.astro"
import HamburgerMenu from "./Sidebar/HamburgerMenu.astro"
import ThemeButton from "./ThemeButton.astro"
---

<header class="header">
	<nav class="nav-bar">
		<div class="left-container">
			<Logo />
			<button aria-label="Home button" onclick="window.location.href='/'">
				<h1>Brooklyn Docs</h1>
			</button>
		</div>
		<div class="right-container">
			<ThemeButton />
			<HamburgerMenu />
		</div>
	</nav>
</header>

<style>
	.header {
		background-color: var(--header-color);
		color: var(--text-color);
		display: flex;
		font-weight: bolder;
		position: fixed;
		top: 0;
		width: 100%;
	}

	.header h1 {
		font-size: 1rem;
	}

	@media screen and (min-width: 48em) {
		.header h1 {
			font-size: 2rem;
			line-height: 0;
		}

		.left-container {
			gap: 20px;
		}
	}

	.nav-bar {
		box-shadow: 0 4px 12px var(--near-background);
		display: flex;
		justify-content: space-between;
		padding: 0.5rem 1.25rem;
		width: 100%;
	}

	.left-container {
		align-items: center;
		display: flex;
		gap: 5px;
	}

	.right-container {
		display: flex;
		justify-content: flex-end;
	}
}
</style>
